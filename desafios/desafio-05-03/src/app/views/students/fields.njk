<div class="item first">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{ student.avatar_url }}"
            >
    </div>
</div>

<div class="item">
    <div>Student</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do(a) aluno(a)"
            value="{{ student.name }}"
            >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email" 
            placeholder=""
            value="{{ student.email }}"
            >
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth_date"
            value="{{ student.birth_date }}"
            >
    </div>
</div>

<div class="item">
    <div>Ano escolar</div>
    <div>
        <select name="year">
            <option value="quito_ano"
            {% if student.year_school == 'quito_ano' %}
                selected
            {% endif %}>5˚ Ano do Ensino Fundamental </option> 
            <option value="sexto_ano"
            {% if student.year_school == 'sexto_ano' %}
                selected
            {% endif %}>6˚ Ano do Ensino Fundamental </option> 
            <option value="setimo_ano"
            {% if student.year_school == 'setimo_ano' %}
                selected
            {% endif %}>7˚ Ano do Ensino Fundamental </option> 
            <option value="oitavo_ano"
            {% if student.year_school == 'oitavo_ano' %}
                selected
            {% endif %}>8˚ Ano do Ensino Fundamental </option> 
            <option value="nono_ano"
            {% if student.year_school == 'nono_ano' %}
                selected
            {% endif %}>9˚ Ano do Ensino Fundamental </option> 
            <option value="primeiro_ano"
            {% if student.year_school == 'primeiro_ano' %}
                selected
            {% endif %}>1˚ Ano do Ensino Médio </option> 
            <option value="segundo_ano"
            {% if student.year_school == 'segundo_ano' %}
                selected
            {% endif %}>2˚ Ano do Ensino Médio </option> 
            <option value="terceiro_ano"
            {% if student.year_school == 'terceiro_ano' %}
                selected
            {% endif %}>3˚ Ano do Ensino Médio </option> 
        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input 
            type="number" 
            name="count_hours" 
            value="{{ student.count_hours }}" 
        >
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <select name="teacher">
            {% for teacher in teacherOptions %}
                <option value="{{ teacher.id }}"
                    {% if student.teacher_id == teacher.id %}
                        selected
                    {% endif %}> {{ teacher.name }}
                </option>
            {% endfor %}
        </select>
    </div>
</div>